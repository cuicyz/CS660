drop table if exists Emp;
drop table if exists Works;
drop table if exists Dept;

//Problem3.1
create table Emp (
    eid integer,
    ename char(20),
    age integer,
    salary real,
    primary key(eid),
    check(salary>2000));

//Problem3.2
create table Dept (
    did integer,
    dname char(20),
    budget real,
    managerid integer);
create assertion Manager_is_employee
check((select count(*)
      from Dept d
      where d.managerid not in (select e.eid
                                from Emp e))=0)
                                
//Problem3.3
create table Works (
    eid integer,
    did integer,
    pct_time integer,
    primary key (eid,did),
    check((
        select count(distinct w.eid)
        from Works w
        group by w.eid
        having sum(pct_time)>100)=0 and
          (select count(distinct w.eid)
           from Works w
           group by w.eid
           having sum(pct_time<100)=0
        )));
        
//Problem3.4
create trigger Least_Salary_for_Manager after update on Emp
for each row
when(old.salary<new.salary)
begin
    update Emp e1
    set e1.salary=new.salary
    where e1.salary<new.salary and e1.eid in (select d.managerid
                                              from Emp e,Works w,Dept d
                                              where e.eid=w.eid and w.did=d.did)
end;

//Problem3.5
drop table if exists Dept cascade;
create table Dept (
    did integer,
    dname char(20),
    budget real,
    managerid integer);
create assertion Budget_limit
check((select count(*)
       from Dept d
       where d.budget>(select sum(d1.budget)*0.2
                       from Dept d1)));


    
